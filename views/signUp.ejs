					</div>
				</div>
			</div>
		</nav>

		<div class="main">
			<form class="form" action="/signup" method="post">
				<div class="title noto-sans-title">
					Create an Account<br /><span>get started today</span>
				</div>
				<input
					type="text"
					placeholder="Full Name"
					name="name"
					class="input noto-sans-title"
					required
				/>
				<input
					type="email"
					placeholder="Email"
					name="email"
					class="input noto-sans-title"
					required
				/>
				<input
					type="text"
					placeholder="Phone Number"
					name="phone"
					class="input noto-sans-title"
					required
				/>
				<input
					type="password"
					placeholder="Password"
					name="password"
					class="input"
					required
				/>
				<input
					type="password"
					placeholder="Confirm Password"
					name="confirmPassword"
					class="input"
					required
				/>

				<div class="title noto-sans-title">
					Enter your farm's location,<br /><span>get real-time updates</span>
				</div>
				<input
					type="text"
					placeholder="Latitude"
					name="latitude"
					class="input noto-sans-title"
					required
				/>
				<input
					type="text"
					placeholder="Longitude"
					name="longitude"
					class="input noto-sans-title"
					required
				/>
				<input
					type="text"
					placeholder="Location Name"
					name="locationName"
					class="input noto-sans-title"
					required
				/>

				<button
					type="submit"
					class="button-confirm noto-sans-title vt323-regular"
				>
					Let's go â†’
				</button>
			</form>

		

	
		<script>
			const darkModeCheckbox = document.getElementById("dark-mode-checkbox");

			darkModeCheckbox.addEventListener("change", function () {
				if (this.checked) {
					document.body.classList.add("dark-mode");
				} else {
					document.body.classList.remove("dark-mode");
				}
			});
		</script>
	</body>
</html>
