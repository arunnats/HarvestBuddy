<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Content</title>
		<!-- css style sheets -->
		<link rel="stylesheet" href="../css/loginsignupForm.css" />
		<link rel="stylesheet" href="../css/navbar.css" />
		<link rel="stylesheet" href="../css/styles.css" />
		<link rel="stylesheet" href="../css/button.css" />
		<link rel="stylesheet" href="../css/content.css" />
		<!--google fonds -->

		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Noto+Sans:ital,wght@0,100..900;1,100..900&display=swap"
			rel="stylesheet"
		/>

		<link
			href="https://fonts.googleapis.com/css2?family=VT323&display=swap"
			rel="stylesheet"
		/>

		<!-- bootsrap  -->
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
			rel="stylesheet"
			integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
			crossorigin="anonymous"
		/>
		<script
			src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
			integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
			crossorigin="anonymous"
		></script>
		<style>
			.main {
				margin-top: 70px;
				display: flex;
				justify-content: center;
				align-items: center;
				flex-wrap: wrap;
				position: relative; /* or absolute */
    			top: 0;
    			left: 0;
    			width: 100%;
				overflow: auto ;
				flex-direction: column ;
				margin-top: 15px ;
			}

			.navbar.navbar-expand-lg.border-bottom.border-body{
				position: absolute;
				top: 0 ;
				left: 0 ;
				right: 0 ;
				z-index: 20 ;
			  }
      
        @media screen and (max-width: 768px) {
          .crop-card{
            width: 100% ;
          }
        }
		</style>
	</head>
<body>
  <nav class="navbar navbar-expand-lg border-bottom border-body" data-bs-theme="dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/content">
        <img src="/images/logo-nobg.png" alt="Logo" height="30" />
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon" id="drop_down"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarColor01">
        <ul class="navbar-nav ms-auto">
          <!-- Only "Home" link remains -->
          <li class="nav-item">
            <a class="nav-link" href="/content">Home</a>
          </li>
        </ul>
        <div class="theme_container">
          <label class="switch" id="dark-mode">
            <span class="sun">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><g fill="#ffd43b"><circle r="5" cy="12" cx="12"></circle><path d="m21 13h-1a1 1 0 0 1 0-2h1a1 1 0 0 1 0 2zm-17 0h-1a1 1 0 0 1 0-2h1a1 1 0 0 1 0 2zm13.66-5.66a1 1 0 0 1 -.66-.29 1 1 0 0 1 0-1.41l.71-.71a1 1 0 1 1 1.41 1.41l-.71.71a1 1 0 0 1 -.75.29zm-12.02 12.02a1 1 0 0 1 -.71-.29 1 1 0 0 1 0-1.41l.71-.66a1 1 0 0 1 1.41 1.41l-.71.71a1 1 0 0 1 -.7.24zm6.36-14.36a1 1 0 0 1 -1-1v-1a1 1 0 0 1 2 0v1a1 1 0 0 1 -1 1zm0 17a1 1 0 0 1 -1-1v-1a1 1 0 0 1 2 0v1a1 1 0 0 1 -1 1zm-5.66-14.66a1 1 0 0 1 -.7-.29l-.71-.71a1 1 0 0 1 1.41-1.41l.71.71a1 1 0 0 1 0 1.41 1 1 0 0 1 -.71.29zm12.02 12.02a1 1 0 0 1 -.7-.29l-.66-.71a1 1 0 0 1 1.36-1.36l.71.71a1 1 0 0 1 0 1.41 1 1 0 0 1 -.71.24z"></path></g></svg>
            </span>
            <span class="moon">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512"><path d="m223.5 32c-123.5 0-223.5 100.3-223.5 224s100 224 223.5 224c60.6 0 115.5-24.2 155.8-63.4 5-4.9 6.3-12.5 3.1-18.7s-10.1-9.7-17-8.5c-9.8 1.7-19.8 2.6-30.1 2.6-96.9 0-175.5-78.8-175.5-176 0-65.8 36-123.1 89.3-153.3 6.1-3.5 9.2-10.5 7.7-17.3s-7.3-11.9-14.3-12.5c-6.3-.5-12.6-.8-19-.8z"></path></svg>
            </span>
            <input type="checkbox" class="input" id="dark-mode-checkbox" >
            <span class="slider"></span>
          </label>
        </div>
      </div>
    </div>
  </nav>
  <div class="main">
    <div class="container">
      <div class="info-divs">
        <div class="card">
          <div class="card-content-wrapper">
            <div class="card-title vt323-regular" style = "font-size: 40px ;">Welcome <%= name %></div>
            <div class="card-price noto-sans-title">
              <span>Updates on <%= farmName %> at <%= location %></span>
            </div>
            <div class="card-subtitle noto-sans-reg">
              <span>Elevation: <%= elevation %> m</span><br />
              <span>Humidity: <%= humidity %>%</span><br />
              <span>Rain: <%= rain %> mm</span><br />
              <span>Wind Speed: <%= windSpeed %> km/h</span><br />
              <span>UV Index Max: <%= uvIndexMax %></span>
            </div>
          </div>
        </div>

        <div class="card">
          <div class="card-content-wrapper">
            <div class="card-title vt323-regular" style = "font-size :35px ;" >Manage Inventory</div>
            <div class="card-title vt323-regular" style = "font-size : 25px ;" >Modify your current inventory!</div>
          </div>
          <button class="button vt323-regular" onclick="redirectTo('/inventory')" style = "width : 200px ; margin-top : 20px ; font-weight : 50 ;">Go to Inventory!</button>
        </div>

        <div class="card">
          <div class="card-content-wrapper">
            <div class="card-title vt323-regular" style = "font-size : 35px ;" >Grow Crop</div> 
            <div class="card-title vt323-regular" style = "font-size : 25px ;" >Set your timeline here !</div>
          </div>
          <button class="button vt323-regular" onclick="redirectTo('/grow-crop')" style = "width : 200px ; margin-top : 20px ; font-weight : 50 ;">Grow Crops!</button>
        </div>
      </div>

      <br>

      <div class="crop-info">
        <% cropsGrown.forEach(crop => { %>
          <div class="crop-card">
            <div class="crop-card-content">
              <h3><%= crop.cropName %></h3>
              <p>Days Passed: <%= crop.daysPassed %></p>
              <p>Days Left: <%= crop.daysLeft %></p>

              <!-- Resource Overview -->
              <h4>Resource Overview:</h4>
              <% if (crop.resourceOverview && crop.resourceOverview.length > 0) { %>
                <% crop.resourceOverview.forEach(resource => { %>
									<p>Resource: <%= resource.itemName %> | Amount Used So Far: <%= resource.itemsUsed %> | Total Amount Required: <%= resource.totalItemsNeeded %></p>
									<hr>
								<% }) %>
							<% } else { %>
								<p>No resource overview available for this crop.</p>
							<% } %>
				
							<!-- Button for Get Crafting Recipes -->
							<form action="/getrecommendations/<%= crop.cropName %>" method="get">
								<button type="submit" class = "button" style = "width : 200px ;">Get Crafting Recipes</button>
							</form>
						</div>
					</div>
				<% }) %>
				
      </div>
    </div>
  </div>
  </div>
  </div>

  <script>
    function redirectTo(url) {
      window.location.href = url;
    }

    const darkModeCheckbox = document.getElementById('dark-mode-checkbox');

    darkModeCheckbox.addEventListener('change', function () {
      if (this.checked) {
        document.body.classList.add('dark-mode');
      } else {
        document.body.classList.remove('dark-mode');
      }
    });
  </script>

</body>
</html>